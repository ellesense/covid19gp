<h2>Join</h2>

<%= render "devise/shared/links" %>

<hr>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Full name (ex. Jane Doe)',
                required: true,
                autofocus: true,
                hint: ("Your name and daily health checks will not be visible to others except the admin.") %>

    <%= f.input :email,
                required: true,
                hint: ("You will use this email address to sign in."),
                input_html: { autocomplete: "email" } %>

    <%= f.input :password, label: 'Password',
                required: true,
                hint: ("Minimum #{@minimum_password_length} characters." if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>

    <%= f.input :password_confirmation, label: 'Confirm password',
                required: true,
                input_html: { autocomplete: "new-password" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Join", class: 'btn btn-primary' %>
  </div>

<% end %>

