<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<hr>

<% @users.each do |user| %>
  <p style="font-size: 1.1rem; font-weight: bold"><%= user.email %></p>

  <p>Daily questionnaire was completed on the following days:</p>
  <% user.entries.each do |entry| %>
  <ul>
    <li><%= entry.created_at.getlocal.strftime("%b. %d. %Y. %l:%M %p. %A.") %></li>
  </ul>
  <% end %>
  <hr>
<% end %>

<br>